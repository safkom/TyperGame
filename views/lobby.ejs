<!-- views/lobby.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Typing Game Lobby</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
<h1>Lobby</h1>

<!-- Display the game code -->
<h3>Game Code: <span id="gameCode"><%= gameCode %></span></h3>
<!-- Add a hidden input field for playerName -->
<input type="hidden" id="playerName" value="<%= playerName %>">

<h2>Players</h2>
<ul id="playerList">
    <% players.forEach(player => { %>
        <li class="<%= player.isCurrentPlayer ? 'current-player' : '' %>"><%= player.name %></li>
    <% }); %>
</ul>
 
<button id="startGameButton" disabled>Start Game</button>

<!-- Include the Socket.IO library -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"></script>
<!-- Include your custom lobby.js script -->
<script src="/javascripts/lobby.js"></script>
</body>
</html>
