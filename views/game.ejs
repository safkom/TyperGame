<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Game</title>
    <style>
        #inputWord {
            width: 80%;
            height: 30px;
            font-size: 16px;
        }
        .correct {
            color: green;
        }
        .incorrect {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <div id="wordList">
            <!-- Display the list of words here -->
            <% words.forEach(word => { %>
                <span><%= word %> </span>
            <% }) %>        
        </div>
        
        <input type="text" id="inputWord" placeholder="Type here...">
    
        <!-- Progress bar for other player(s) -->
        <div id="progressBars" class="w3-container">
    
            <h2>Player Progress</h2>
    
            <% players.forEach(player => { %>
                <div class="progress-container">
                    <p class="player-name"><%= player.name %>:</p>
                    <div class="progress-bar-container">
                        <div id="progressBar-<%= player.name %>" class="progress-bar" style="width: 0;"></div>
                    </div>
                    <p id="progressLabel-<%= player.name %>">0%</p>
                </div>
            <% }) %>
    
        </div>
    
    </div>
    
<script src="/javascripts/game.js"></script>
</body>
</html>
