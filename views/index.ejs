<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Typing Game</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<div class="container">
    <div id="errorBox" class="error-box"></div>
    <div id="selectionScreen">
        <h1>Welcome to My Typing Game</h1>
        <button id="createGameBtn">Create a new game</button>
        <button id="joinGameBtn">Join a game</button>
    </div>
        

    <div id="createGameForm" style="display: none;">
        <h1>Create a new game</h1>
        <form>
            <label for="createdBy">Your Name:</label>
            <input type="text" id="createdBy" name="createdBy" required><br><br>
            <button type="submit">Create Game</button>
            <button id="backToSelection1Btn" type="button">Back</button>
        </form>
    </div>

    <div id="joinGameForm" style="display: none;">
        <h1>Join a game</h1>
        <form>
            <label for="gameCodeToJoin">Game Code:</label>
            <input type="text" id="gameCodeToJoin" name="gameCodeToJoin" required><br><br><br>
            <label for="playerNameInput">Your Name:</label>
            <input type="text" id="playerNameInput" name="playerNameInput" required><br><br><br>
            <button type="submit">Join Game</button>
            <button id="backToSelection2Btn" type="button">Back</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"></script>
<script src="/javascripts/app.js"></script>
<script>
    selectionScreen.style.opacity = 0;
   // Show/hide create game form
   createGameBtn.addEventListener('click', () => {
        selectionScreen.classList.add('fade-out');
        selectionScreen.classList.remove('fade-in');
        createGameForm.classList.remove('fade-out');
        createGameForm.classList.add('fade-in');
        createGameForm.style.display = 'block';
        joinGameForm.style.display = 'none';
    });

    // Show/hide join game form
    joinGameBtn.addEventListener('click', () => {
        selectionScreen.classList.add('fade-out');
        selectionScreen.classList.remove('fade-in');
        joinGameForm.classList.remove('fade-out');
        joinGameForm.classList.add('fade-in');
        joinGameForm.style.display = 'block';
        createGameForm.style.display = 'none';
    });

    // Back button for create game form
    backToSelection1Btn.addEventListener('click', () => {
        createGameForm.classList.remove('fade-in');
        createGameForm.classList.add('fade-out');
        selectionScreen.classList.add('fade-in');
        selectionScreen.classList.remove('fade-out');
        selectionScreen.style.display = 'block';
        createGameForm.style.display = 'none';
        joinGameForm.style.display = 'none';
    });

    // Back button for join game form
    backToSelection2Btn.addEventListener('click', () => {
        joinGameForm.classList.remove('fade-in');
        joinGameForm.classList.add('fade-out');
        selectionScreen.classList.add('fade-in');
        selectionScreen.classList.remove('fade-out');
        selectionScreen.style.display = 'block';
        createGameForm.style.display = 'none';
        joinGameForm.style.display = 'none';
    });

    // Add fade-in effect after a short delay
    setTimeout(() => {
        //set opaticy to 1
        selectionScreen.style.opacity = 1;
        selectionScreen.removeAttribute('style');
        selectionScreen.classList.add('fade-in');
    }, 400); // Adjust the delay as needed

</script>
</body>
</html>
